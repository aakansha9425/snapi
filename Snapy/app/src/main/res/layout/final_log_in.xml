<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_common_bg">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="238dp"
        android:layout_height="143dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/cp_logo" />

    <TextView
        android:id="@+id/login_transaction"
        android:layout_width="195dp"
        android:layout_height="43dp"
        android:layout_below="@+id/logo"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="#000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/register_transaction"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:layout_below="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/login_transaction"
        android:text="REGISTER"
        android:textColor="#000"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="195dp"
        android:layout_height="75dp"
        android:layout_below="@+id/login_transaction"
        android:layout_marginTop="-57dp"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:layout_height="327dp"
        android:layout_below="@id/imageView10"
        app:srcCompat="@drawable/login_credentials"
        android:layout_marginRight="8dp"/>

    <EditText
        android:id="@+id/etEmailLogin"
        android:layout_width="269dp"
        android:layout_height="51dp"
        android:layout_below="@id/imageView10"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="75dp"
        android:paddingEnd="15dp"
        android:backgroundTint="#55A8E1"
        android:hint="Enter username"
        android:maxLines="1"
        android:textColor="#A30E0E0E"
        android:textSize="22sp"
        android:fontFamily="@font/balthazar"/>

    <EditText
        android:id="@+id/etPassLogin"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:layout_below="@id/etEmailLogin"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="75dp"
        android:backgroundTint="#55A8E1"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#A30E0E0E"
        android:textSize="22sp"
        android:fontFamily="@font/balthazar"/>

    <Button
        android:id="@+id/btnlogIn"
        android:layout_width="191dp"
        android:layout_height="67dp"
        android:text="Button"
        android:visibility="invisible"
        android:layout_below="@id/tvForgetPass"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"/>

    <TextView
        android:id="@+id/tvForgetPass"
        android:layout_width="327dp"
        android:layout_height="27dp"
        android:text="Forget password?"
        android:textColor="#A30E0E0E"
        android:textSize="18sp"
        android:fontFamily="@font/bree_serif"
        android:layout_below="@+id/etPassLogin"
        android:layout_marginLeft="33dp"/>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView11"
        android:layout_marginTop="-25dp"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:text="Don't have an account ? Register with us"
        android:textColor="#A30E0E0E"
        android:textSize="18sp" />
</RelativeLayout>