<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Profile_Page">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_gravity="left"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Username"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/email "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingLeft="20dp"
            android:text="Email"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    >

    <TextView
        android:id="@+id/course_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course selected"
        android:textSize="30sp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_selected"
        android:text="Course name"
        android:textSize="25sp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/course_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Duration"
        android:layout_below="@id/course_name"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/course_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_duration"
        android:text="no of days"
        android:textSize="25sp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/project_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project selected"
        android:layout_marginTop="30dp"
        android:layout_below="@id/course_days"
        android:textSize="30sp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_selected"
        android:text="project name"
        android:textSize="25sp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/Interest_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interest selected"
        android:layout_marginTop="30dp"
        android:layout_below="@id/project_name"
        android:textSize="30sp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/Interst_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Interest_selected"
        android:text="Interest name"
        android:textSize="25sp"
        android:paddingLeft="10dp"/>

</RelativeLayout>



</LinearLayout>