<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D2E0D7"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/Blue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:onClick="set_user_dp"
            android:src="@drawable/ic_add_a_photo_black_24dp" />

        <TextView
            android:id="@+id/select_profile_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aref_ruqaa"
            android:gravity="center"
            android:text="Select Profile"
            android:textColor="#D2E0D7"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="20dp">


        <EditText
            android:id="@+id/name_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aref_ruqaa"
            android:hint="@string/enter_your_name"
            android:padding="15dp"
            android:textColor="#0C0C0C" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aref_ruqaa"
                android:text="Select your course"
                android:textColor="#000000"
                android:textSize="20sp" />


            <Spinner
                android:id="@+id/course_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/Course_array"
                android:popupBackground="#D2E0D7"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aref_ruqaa"
                android:text="Select your duration"
                android:textColor="#000000"
                android:textSize="20sp" />


            <Spinner
                android:id="@+id/duration_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/Duartion_array"
                android:popupBackground="#D2E0D7"
                android:spinnerMode="dropdown" />

        </LinearLayout>
        <ProgressBar
            android:layout_width="230dp"
            android:layout_gravity="center"
            android:id="@+id/progressbar_save"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_below="@+id/radiobutton_layout"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aref_ruqaa"
                android:text="Select your project"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/project_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/Project_array"
                android:popupBackground="#D2E0D7" />

        </LinearLayout>

        <TextView
            android:id="@+id/intrest_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/aref_ruqaa"
            android:text="You have taken this course for  :"
            android:textColor="#000000"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/radiobutton_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/rdio_btn_container"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/personal_intrest"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/aref_ruqaa"
                    android:onClick="choose_intrest"
                    android:text="Personal interest"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/professional_intrest"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/aref_ruqaa"
                    android:onClick="choose_intrest"
                    android:text="Professional interest"
                    android:textColor="#000000"
                    android:textSize="17sp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:background="@color/Blue"
                android:text="SAVE"
                android:onClick="save_user_details"
                android:textColor="#D2E0D7"
                android:textSize="20sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>